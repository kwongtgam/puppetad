development:
  sessions:
    default:
      hosts: 
        - localhost:<%= @pixlrmongodbport %>
      database: pixlr_development

stage:
  sessions:
    default:
      database: pixlr_stage
      read: :secondary  
      hosts:
    <% @pixlrmongodb.each do |mongonodes| -%>
    - <%= mongonodes %>:<%= @pixlrmongodbport %>
    <% end -%>
  
# set these environment variables on your prod server
production:
  sessions:
    default:
      database: pixlr
      read: :secondary  
      hosts:
    <% @pixlrmongodb.each do |mongonodes| -%>
    - <%= mongonodes %>:<%= @pixlrmongodbport %>
    <% end -%>
